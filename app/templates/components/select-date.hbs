
<div class="mdl-textfield mdl-js-textfield select-date-item mdl-textfield--floating-label">
  <label class="mdl-textfield__label sr-only" for="select-year">Year</label>
  <select class="mdl-textfield__input" type="text" id="select-year" onchange={{ action "yearSelected" value="target.value"}}>
    {{#each uniqYears as |year|}}
      <option value={{year}}>{{year}}</option>
    {{/each}}
  </select>
</div>

<div class="mdl-textfield mdl-js-textfield select-date-item mdl-textfield--floating-label">
  <label class="mdl-textfield__label sr-only" for="select-month">Month</label>
  <select class="mdl-textfield__input" type="text" id="select-month" onchange={{ action "monthSelected" value="target.value"}}>
    {{#each uniqMonths as |month|}}
      <option value={{month}}>{{beatify-time-period month}}</option>
    {{/each}}
  </select>
</div>

<div class="select-date-button">
  {{#if btnActive}}
    <button class="mdl-button mdl-js-button mdl-button--primary" id="time-period-change-btn" {{action "changeTimePeriod"}}>ok</button>
  {{else}}
    <button class="mdl-button mdl-js-button mdl-button--primary" id="time-period-change-btn" disabled>ok</button>
  {{/if}}
</div>
